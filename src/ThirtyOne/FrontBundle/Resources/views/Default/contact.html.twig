{% block title %}Contact{% endblock %}
{% block content %}
    <div class="bgpic contact">
        <h2 class="center">Contact</h2>
        <div class="dsp-t">
            <div class="dsp-tr static">
                <div class="dsp-tc">
                    <p><strong>Contact :</strong></p>
                    <address>beaverfather@gmail.com</address>
                </div>
                <div class="dsp-tc staticRight">
                    <p><strong>Contact relations presse :</strong></p>
