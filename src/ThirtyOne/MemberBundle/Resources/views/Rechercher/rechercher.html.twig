{% extends "ThirtyOneMemberBundle::layout.html.twig" %}

{% block content %}

    <div class="recherche">
        <form action="" method="POST">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            {% for champs in form %}
                {% if champs.errors is defined %}
                    {{ form_label(champs) }}
                    {% if champs.errors is defined %}
                        {{ form_errors(champs) }}
                    {% endif %}
                    {{ form_widget(champs) }}
                {% endif %}
            {% endfor %}

            {{ form_end(form) }}

        </form>
    </div>

    <div class="results">

    </div>
{% endblock %}