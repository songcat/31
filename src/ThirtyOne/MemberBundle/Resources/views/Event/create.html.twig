{% extends "ThirtyOneMemberBundle::layout.html.twig" %}
{% block title %}Créer un rallye{% endblock %}
{% block bodyClass %}class="createRallye"{% endblock %}
{% block content %}
    {{ include('ThirtyOneMemberBundle:Event:eventNav.html.twig', {'path':'null'}) }}

    <h2>Créer un rallye</h2>
    <div class="contentBlock">


        {% if error is defined %}
            <div class="error">{{ error }}</div>
        {% endif %}
        <form action="#" method="post" {{ form_enctype(form) }}>
            <div class="rallyeGen">
                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="dsp-tc">
                    <div class="img">
                        {{ form_row(form.file) }}
                    </div>
                    <div class="includes">
                        <strong>Inclus dans la prestation</strong>
                	<span>
                    	Reportage live
                	</span>
                	<span>
                    	Bornes interactives
                	</span>
                    </div>
                </div>
                


                
                <div class="dsp-tc generals">
                    {{ form_row(form.name) }}
                    <div class="date">
                        {{ form_row(form.date) }}
                    </div>
                    {{ form_row(form.adress) }}
                    {{ form_row(form.city) }}
                    {{ form_row(form.region) }}
                    {{ form_row(form.description) }}

                    {{ form_row(form.private) }}


            </div>


            <div class="services">

                <div id="place" class="row">
                    {{ include('ThirtyOneMemberBundle:Event:getPosition.html.twig', {'pos':1}) }}
                    <div>
                        {% for s in service %}
                            {% if s.type == 1 %}

                                <div class="col3 center">
                                    <img src="{{ asset('uploads/services/'~s.path) }}">

                                    <h3> {{ s.name }} </h3>

                                    <p> {{ s.description }}</p>
                                    <a class="reserve button" data-type="place"
                                       data-price="{{ s.price }}" data-id="{{ s.id }}">
                                        réserver
                                    </a>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="skip">
                        <a href="#food" class="pinklink">Passer cette étape ></a>
                    </div>
                </div>

                <div id="food" class="row">
                    {{ include('ThirtyOneMemberBundle:Event:getPosition.html.twig', {'pos':2}) }}
                    <div>
                        {% for s in service %}
                            {% if s.type == 2 %}

                                <div class="col3 center">
                                    <img src="{{ asset('uploads/services/'~s.path) }}">

                                    <h3> {{ s.name }} </h3>

                                    <p> {{ s.description }}</p>
                                    <a class="reserve button" data-type="food"
                                       data-price="{{ s.price }}" data-id="{{ s.id }}">
                                        réserver
                                    </a>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>

                    <div class="skip">
                        <a href="#music" class="pinklink">Passer cette étape ></a>
                    </div>
                </div>
                <div id="music" class="row">
                    {{ include('ThirtyOneMemberBundle:Event:getPosition.html.twig', {'pos':3}) }}
                    <div>
                        {% for s in service %}
                            {% if s.type == 3 %}

                                <div class="col3 center">
                                    <img src="{{ asset('uploads/services/'~s.path) }}">

                                    <h3> {{ s.name }} </h3>

                                    <p> {{ s.description }}</p>
                                    <a class="reserve button" data-type="music"
                                       data-price="{{ s.price }}" data-id="{{ s.id }}">
                                        réserver
                                    </a>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>

                    <div class="skip">
                        <a href="#recap" class="pinklink">Passer cette étape ></a>
                    </div>
                </div>
                {{ form_row(form.place) }}
                {{ form_row(form.food) }}
                {{ form_row(form.music) }}

                <div id="recap" class="row">
                    {{ include('ThirtyOneMemberBundle:Event:getPosition.html.twig', {'pos':4}) }}

                    <h3>Récapitulatif de la commande </h3>

                    <div id="resume" class="resume">
                        <strong>Inclus dans la prestation:</strong> <br>
                        Live Reportage du rallye <br>
                        Bornes interactives <br>
                        Envois et Impressions des invitations <br>
                        Gestion des invités <br>
                        Total : XXXX€ prélevé sur votre carte bancaire <br> <br>

                        <strong>Options supplémentaires :</strong><br>
                        Choix du lieu : <span class="place"></span> € <br>
                        Choix du traiteur : <span class="food"></span> € <br>
                        Choix du DJ : <span class="music"></span> €<br>
                        A régler directement auprès de nos partenaires
                    </div>
                </div>

            </div>


            <div class="submit">
                {{ form_row(form.enregistrer) }}
                {{ form_rest(form) }}
            </div>


        </form>
    </div>
{% endblock %}
